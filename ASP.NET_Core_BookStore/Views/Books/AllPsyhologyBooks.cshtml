@model IEnumerable<ASP.NET_Core_BookStore.Models.Book>

@{
    ViewData["Title"] = "Психология";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Главная</a></li>
        <li class="breadcrumb-item"><a href="#">Все товары</a></li>
        <li class="breadcrumb-item active" aria-current="page">Психология</li>
    </ol>
</nav>
<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100" style="width: 22rem;">
                <img src="@item.Img" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p style="font-size:1.5em;" class="card-text">Цена:&nbsp;<strong>@item.Price грн.</strong></p>
                    <a class="btn btn-lg btn-danger" asp-controller="Books" asp-action="DetailsBook" asp-route-id="@item.Id">Купить</a>
                </div>
            </div>
        </div>
    }
</div>
