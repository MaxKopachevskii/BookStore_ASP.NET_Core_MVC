@model IEnumerable<ASP.NET_Core_BookStore.Models.Book>

@{
    ViewData["Title"] = "Все товары";
}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Главная</a></li>
            <li class="breadcrumb-item active" aria-current="page">Все товары</li>
        </ol>
    </nav>
@*<center><h3>Все товары</h3></center>*@
<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card h-100">
                <img src="@item.Img" class="card-img-top" alt="...">
                <div class="card-body">
                    <h6 style="font-size:1.2em;" class="card-title">@item.Name</h6>
                    <p style="font-size:1.3em;" class="card-text">Цена:&nbsp;<strong>@item.Price грн.</strong></p>
                    <a class="btn btn-lg btn-danger" asp-controller="Books" asp-action="DetailsBook" asp-route-id="@item.Id">Купить</a>
                </div>
            </div>
        </div>
    }
</div>

