@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a style="font-size:1.2em; font-family: 'Comic Sans MS'; color:#ffd800" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Books", new { area = "" })">
                    <button style="font-size:1.2em; font-family: 'Comic Sans MS'; color:#f61111" type="submit" class="nav-link btn btn-link ">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a style="font-size:1.2em; font-family: 'Comic Sans MS'; color:#ffd800" class="nav-link" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
            </li>
            <li class="nav-item">
                <a style="font-size:1.2em; font-family: 'Comic Sans MS'; color:#f61111" class="nav-link" asp-area="Identity" asp-page="/Account/Login">Вход</a>
            </li>
        }
    </ul>
